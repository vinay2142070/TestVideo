<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"

   >

    <VideoView
        android:id="@+id/video_display_original"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@color/colorWhite"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_videosize_original"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/capture_video"
        android:layout_marginTop="10dp"
        android:text="Video Size:" />

    <VideoView
        android:id="@+id/video_display_compress"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@color/colorWhite"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_videosize_compress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/capture_video"
        android:layout_marginTop="10dp"
        android:text="Video Size:" />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
  >

    <TextView android:id="@+id/tv_indicator"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/txtProgressPercentcompress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compressed 0%"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="15sp"
        android:fontFamily="calibri"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ProgressBar
        android:id="@+id/progressBarcompress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtProgressPercent" />
    <Button
        android:id="@+id/capture_video"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:text="Capture Video"
        android:layout_margin="5dp"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/txtProgressPercentupload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uploaded 0%"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="15sp"
        android:fontFamily="calibri"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ProgressBar
        android:id="@+id/progressBarupload"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtProgressPercent" />


    <Button
        android:id="@+id/upload_video"

        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:text="@string/upload_video"
        android:layout_margin="5dp"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/txtProgressPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Downloaded 0%"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="15sp"
        android:fontFamily="calibri"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtProgressPercent" />
    <Button
        android:id="@+id/download_video"

        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:text="Download Video"
        android:layout_margin="5dp"
        android:background="@color/colorPrimary"/>




</LinearLayout>


</LinearLayout>